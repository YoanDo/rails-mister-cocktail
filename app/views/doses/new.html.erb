<div class="container">
  <div class="row">
    <div class="col-sm-4 col-sm-offset-4">
      <h1>Add an ingredient for <%= @cocktail.name %></h1>
      <%= simple_form_for [@cocktail, @dose] do |f| %>
       <!-- Alerte erreur validation -->
       <% if @dose.errors.any? %>
        <ul>
          <% @dose.errors.full_messages.each do |message| %>
           <li><%= message %></li>
          <% end %>
        </ul>
       <% end %>

        <%= f.input :ingredient_id, collection:Ingredient.all.sort %>
        <%= f.input :description %>
        <%= f.submit %>
      <% end %>
    </div>
  </div>
</div>
